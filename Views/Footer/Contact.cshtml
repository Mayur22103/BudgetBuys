@{
    ViewBag.Title = "Contact Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1 class="mb-4">Contact Us</h1>
            <p class="mb-4">We'd love to hear from you! Please reach out with any questions or feedback.</p>
            <ul class="list-unstyled">
                <li class="mb-2"><i class="fa fa-home mr-2"></i> Gujarat, India</li>
                <li class="mb-2"><i class="fa fa-envelope mr-2"></i> info.budgetbuys@gmail.com</li>
                <li class="mb-2"><i class="fa fa-phone mr-2"></i> +91 234 567 88</li>
                <li class="mb-2"><i class="fa fa-print mr-2"></i> +91 234 567 89</li>
            </ul>
            <a href="~/Home/Index" class="btn btn-secondary mt-4"><i class="fa fa-arrow-left"></i> Back to Home</a>
        </div>

        <div class="col-md-6">
            <h2 class="mb-4">Get in Touch</h2>
            <form method="post" action="@Url.Action("SendMessage", "Footer")">
                <div class="form-group mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your Name" required>
                    <div class="invalid-feedback">
                        Please enter your name.
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Your Email" required>
                    <div class="invalid-feedback">
                        Please provide a valid email.
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="3" placeholder="Your Message" required></textarea>
                    <div class="invalid-feedback">
                        Please enter your message.
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3"><i class="fa fa-paper-plane"></i> Send Message</button>
            </form>
        </div>
    </div>
</div>
