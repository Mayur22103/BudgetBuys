@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(90deg, rgba(0,36,61,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
            font-size: 1rem;
        }

        .login-container {
            padding: 1rem;
        }

        .card {
            border-radius: 1rem;
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
        }

        .card-body {
            padding: 2rem;
        }

        .form-outline input {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 0.375rem;
            padding: 0.875rem;
            color: white;
        }

        .form-outline input::placeholder {
            color: #cfcfcf;
        }

        .btn-outline-light {
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
        }

        .social-links i {
            color: white;
        }

        .social-links i:hover {
            color: #0dcaf0;
        }

        .gradient-custom {
            background: rgba(0, 0, 0, 0.6);
            border-radius: 1rem;
        }

        /* Responsive adjustments */
        media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }
            .form-outline input {
                padding: 0.75rem;
            }
            h2 {
                font-size: 1.5rem;
            }
            .social-links i {
                font-size: 1.25rem;
            }
        }

        media (max-width: 576px) {
            .card-body {
                padding: 1rem;
            }
            .form-check-label, .form-check-input {
                font-size: 0.9rem;
            }
            h2 {
                font-size: 1.25rem;
            }
        }
    </style>
</head>
<body>
    <section class="container vh-100 login-container d-flex justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card text-white gradient-custom">
                <div class="card-body text-center">
                    <h2 class="fw-bold mb-4 text-uppercase">Login</h2>
                    <p class="text-white-50 mb-4">Please enter your login and password!</p>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                    }

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="form-check form-check-inline mb-4">
                            <input class="form-check-input" type="radio" name="userType" id="customerRadio" value="Customer" checked>
                            <label class="form-check-label text-white-50" for="customerRadio">Customer</label>
                        </div>
                        <div class="form-check form-check-inline mb-4">
                            <input class="form-check-input" type="radio" name="userType" id="sellerRadio" value="Seller">
                            <label class="form-check-label text-white-50" for="sellerRadio">Seller</label>
                        </div>
                        <div class="form-check form-check-inline mb-4">
                            <input class="form-check-input" type="radio" name="userType" id="adminRadio" value="Admin">
                            <label class="form-check-label" for="adminRadio">Admin</label>
                        </div>

                        <div class="form-outline form-white mb-4">
                            @Html.TextBox("email", null, new { @class = "form-control form-control-lg", placeholder = "Email" })
                        </div>

                        <div class="form-outline form-white mb-4">
                            @Html.Password("password", null, new { @class = "form-control form-control-lg", placeholder = "Password" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-outline-light btn-lg">Login</button>
                        </div>
                    }

                
                    <br />

                    <div>
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-white-50">Forgot password?</a><br />
                    </div>

                    <p class="mt-3">
                        <a href="@Url.Action("Index", "Home")" class="text-white-50">Go to Home Page</a>
                    </p>

                    <p class="mt-4 mb-0">
                        Don't have an account?
                        <a href="/Account/Register" class="text-white-50 fw-bold">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
</body>
</html>
