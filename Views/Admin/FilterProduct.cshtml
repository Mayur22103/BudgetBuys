@using Project.Models
@model IEnumerable<Product>

@{
    ViewBag.Title = "Products List";
}

<h2 class="text-center">Products List</h2>

<!-- Back to Products Button -->
<div class="d-flex justify-content-between mb-3">
    <div>
        <a href="@Url.Action("Products", "Admin")" class="btn btn-info">Back To Products</a>
    </div>
</div>

<!-- Products Table -->
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Product Condition</th>
                <th>Description</th>
             
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ProductPhoto))
                        {
                            <img src="~/@Url.Content(product.ProductPhoto)" alt="Product Image" class="img-thumbnail" style="width: 80px; height: 70px; border-radius: 50%;">
                        }
                        else
                        {
                            <img src="@Url.Content("~/Content/images/no-image.png")" alt="No Image" class="img-thumbnail" style="width: 70px; height: 70px; border-radius: 50%;">
                        }
                    </td>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td> <!-- Display price in currency format -->
                    <td>@product.Quantity</td>
                    <td>@product.ProductCondition</td>
                    <td>@product.Description</td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: Add custom styling for a better layout -->
<style>
    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
        font-weight: bold;
        color: #333;
    }

    .table {
        background-color: #f9f9f9;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table thead {
            background-color: #343a40;
            color: white;
        }

    .btn-group .btn {
        margin-right: 5px;
    }

    /* Adjust margins for responsive layout */
    media (max-width: 768px) {
        .d-flex.flex-wrap .form-control

    {
        width: 100%;
        margin-right: 0;
    }

    .d-flex.flex-wrap .btn {
        width: 100%;
    }
    }
</style>
